{% extends "layouts.admin.app" %}


{% block content %}

	<!-- Content Wrapper. Contains page content -->
	<div
		class="content-wrapper">

		<!-- Content Header (Page header) -->
		<section class="content-header">
			<div class="container-fluid">
				<div class="row mb-2">
					<div class="col-sm-6">
						<h1>Catégories</h1>
					</div>
					<div class="col-sm-6">
						<ol class="breadcrumb float-sm-right">
							<li class="breadcrumb-item">
								<a href="#">Accueil</a>
							</li>
							<li class="breadcrumb-item active">Catégories</li>
						</ol>
					</div>
				</div>
			</div>
			<!-- /.container-fluid -->
		</section>


		<hr/>

		{% if errors.any() %}
			<div class="alert alert-danger">
				<ul>
					{% for error in errors.all() %}
						<li>{{ error }}</li>
					{% endfor %}
				</ul>
			</div>
		{% endif %}

		<!-- Main content -->
		<!-- Main content -->
		<section class="content">
			<div class="container-fluid">
				<div
					class="row">
					<!-- left column -->
					<div
						class="col-md-12">
						<!-- general form elements -->
						<div class="card card-primary">
							<div class="card-header">
								<h3 class="card-title">{{ title }}</h3>
							</div>
							<!-- /.card-header -->
							<!-- form start -->
							<form {% if categorydata['id'] is empty %} action="{{ url('add-edit-categorie') }}" {% else %} action="{{ url('add-edit-categorie' , categorydata['id']) }}" {% endif %} method="POST">
								{{csrf_field()}}

								<div class="card-body">
									<div class="form-group">

										<label for="exampleInputEmail1">Nom de la catégorie</label>
										<input type="text" class="form-control" id="exampleInputEmail1" placeholder="Entrez le nom de la catégorie" name="nom_categorie" {% if categorydata['nom_categorie'] is not empty %} value="{{ categorydata['nom_categorie'] }}" {% else %} value="{{ old('category_name ') }}" {% endif %}>
										<p style="color: red">
											{{ errors.first('nom_categorie') }}
										</p>
									</div>
									{# <div class="form-group">
										<label for="exampleInputEmail1">url</label>
										<input type="text" class="form-control" id="exampleInputEmail1" placeholder="Entrez l'url" name="url" {% if categorydata['url'] is not empty %} value="{{ categorydata['url'] }}" {% else %} value="{{ old('url ') }}" {% endif %}>
									</div> #}

									<div class="form-group">
										<label for="exampleInputEmail1">Position</label>
										<input type="number" class="form-control" id="exampleInputEmail1" placeholder="Entrez le numéro de la position" name="position" {% if categorydata['position'] is not empty %} value="{{ categorydata['position'] }}" {% else %} value="{{ old('position ') }}" {% endif %}>
									</div>

								</div>
								<!-- /.card-body -->

								<div class="card-footer">
									<button type="submit" class="btn btn-primary">{{ title}}</button>
								</div>
							</form>
						</div>
						<!-- /.card -->

						<!-- general form elements -->


					</div>
					<!--/.col (left) -->

				</div>
				<!-- /.row -->
			</div>
			<!-- /.container-fluid -->
		</section>
		<!-- /.content -->
		<!-- /.container-fluid -->
	</section>
	<!-- /.content -->
</div>
<!-- /.content-wrapper -->{% endblock %}
