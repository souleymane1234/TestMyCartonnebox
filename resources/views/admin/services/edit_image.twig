{% extends "layouts.admin.app" %}


{% block content %}

	<!-- Content Wrapper. Contains page content -->
	<div
		class="content-wrapper">

		<!-- Content Header (Page header) -->
		<section class="content-header">
			<div class="container-fluid">
				<div class="row mb-2">
					<div class="col-sm-6">
						<h1>Services</h1>
					</div>
					<div class="col-sm-6">
						<ol class="breadcrumb float-sm-right">
							<li class="breadcrumb-item">
								<a href="#">Accueil</a>
							</li>
							<li class="breadcrumb-item active">{{ title }}</li>
						</ol>
					</div>
				</div>
			</div>
			<!-- /.container-fluid -->
		</section>


		<hr/>

		<!-- Main content -->
		<!-- Main content -->
			<section class="content"> <div class="container-fluid">
				<div
					class="row">
					<!-- left column -->
					<div
						class="col-md-12">
						<!-- general form elements -->
						<div class="card card-primary">
							<div class="card-header">
								<h3 class="card-title">{{ title }}</h3>
							</div>
							<!-- /.card-header -->

							{% if errors.any() %}
								<div class="alert alert-danger">
									<ul>
										{% for error in errors.all() %}
											<li>{{ error }}</li>
										{% endfor %}
									</ul>
								</div>
							{% endif %}


							<!-- form start -->
							<form action="{{ url('update-images') }}" method="POST" enctype="multipart/form-data">
								{{csrf_field()}}

								<div class="card-body">

									<input type="hidden" value="{{ images['id'] }}" name="id">
									<div class="col-md-6">

										<label for="exampleInputEmail1">Images</label>
										<div class="image-container" style="text-align: right;">
											{% for image in images['image'] %}
												<div class="input-group hdtuto control-group lst increment">
													<div class="row col-md-6">
														<input type="file" name="filenames[]" class="myfrm form-control">
													</div>
													<div class="row col-md-6">
														<div class="image-container">
															<img style="width: 100px; margin-top: 15px; display: inline-block;" src="{{ asset('image/service_images/' ~ image) }}" alt="" data-file="{{ image }}" data-size="YOUR_FILE_SIZE_HERE" data-type="YOUR_FILE_TYPE_HERE">
														</div>

													</div>
												</div>
											{% endfor %}

										</div>


									</div>

								</div>


							</div>
							<!-- /.card-body -->

							<div class="card-footer">
								<button type="submit" class="btn btn-primary">{{ title}}</button>
							</div>
						</form>
					</div>
					<!-- /.card -->

					<!-- general form elements -->


				</div>
				<!--/.col (left) -->

			</div>
			<!-- /.row -->
		</div>
		<!-- /.container-fluid -->
	</section>
	<!-- /.content -->
	<!-- /.container-fluid -->
</section>
<!-- /.content --></div><!-- /.content-wrapper -->{% endblock %}
