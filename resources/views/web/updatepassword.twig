{% extends "layouts.front.app" %}
{% block content %}

	<main
		id="main">
		<!-- ======= About Section ======= -->
		<section id="hero" class="about">
			<div class="container">
				<div class="row">
					<div class="col-md-12">
						<div class="input-group">
							<input type="search" class="form-control" placeholder="Rechercher ici" style="border-bottom-left-radius: 25px;">
							<button id="search-button" type="button" class="btn_submssion" style="border-bottom-right-radius: 25px;">
								<i class="icofont-search"></i>
								Rechercher
							</button>
						</div>
					</div>
					<div class="col-md-12">
						<div class="m-t-10">
							<a href="#" class="" style="color: #005BA4;">Accueil »</a>
							Mon profil
						</div>

					</div>

				</div>

				<div class="row" style="margin-bottom: 30px;">
					<div class="col-md-4">
						<div class="m-t-30 text-center">

							<div class="preview ">
								<img class="preview-img" src="assets/img/mon_profil.jpg" alt="Preview Image" width="200" height="200" style="border-radius: 50%;">
								<div class="browse-button">
									<i class="fa fa-pencil-alt"></i>
									<input class="browse-input" type="file" required name="UploadedFile" id="UploadedFile"/>
								</div>
								<span class="Error"></span>
							</div>
							<div class="m-t-5 text-center" style="font-size: 14px; font-style: italic; text-decoration: underline;">
								Changer
							</div>
						</div>
					</div>
					<div class="col-md-8">
						<div class="m-t-30">

							<div class="col-md-3 typ_msc slted">
								<a href="{{ url('/changepassword') }}" style="color:#fff !important;">Modifier le mot de passe</a>

							</div>
							<div class="col-md-3 typ_msc">
								<a href="{{ url('/compte') }}">Détails du compte</a>
							</div>

							{% if app.session.has('message') %}
								<div class="alert alert-danger alert-block">
									<button type="button" class="close" data-dismiss="alert">×</button>
									<strong>{{ app.session.get('message') }}</strong>
								</div>
							{% endif %}
							{% if errors.any() %}
								<div class="alert alert-danger">
									<ul>
										{% for error in errors.all() %}
											<li>{{ error }}</li>
										{% endfor %}
									</ul>
								</div>
							{% endif %}

						</div>
						<div class="m-t-10" style="background: #f2f2f2; padding: 15px; border-radius: 25px;">
							<form method="post" action="{{ url('updatepassword') }}">
								{{csrf_field()}}
								<div class="row">
									<div class="col-md-6">
										<div class="m-t-10">
											<label style="font-weight: 600;">Mot de passe actuel</label>
											<input class="form-control" placeholder="Entrez le mot de passe actuel" type="password" name="oldpassword">
										</div>
									</div>
									<div class="col-md-6">
										<div class="m-t-10">
											<label style="font-weight: 600;">Nouveau  mot de passe</label>
											<input class="form-control" placeholder="Entrez le nouveau mot de passe" type="password" name="newpassword">
										</div>
									</div>


								</div>
								<div class="row">
									<div class="col-md-12">
										<div class="text-center m-t-20">
											<button type="submit" class="btn btn_souscription1">Enregistrer les modifications</button>
										</div>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>

			</div>
		</section>

		<section id="social_bloc" class="d-none d-lg-block">
			<div class="container">
				<div class="row animated fadeInUp visible" data-animation="fadeInUp">
					<div class="col-md-12 text-center">
						<h2 class="up_text" style="color:#005BA4; font-size: 26px; font-weight: 600;">SUIVEZ NOUS SUR LES RÉSEAUX SOCIAUX</h2>
						<hr class="hr_mate">
						<p class="">
							<a href="#" class="link_social">
								<i class="icofont-facebook" style="color: #fff;"></i>
							</a>
							<a href="#" class="link_social2">
								<i class="icofont-twitter" style="color: #fff;"></i>
							</a>
							<a href="#" class="link_social3">
								<i class="icofont-youtube" style="color: #fff;"></i>
							</a>
							<a href="#" class="link_social4">
								<i class="icofont-linkedin" style="color: #fff;"></i>
							</a>
							<a href="#" class="link_social5">
								<i class="icofont-instagram" style="color: #fff;"></i>
							</a>
						</p>
					</div>


				</div>
			</div>
		</section>


	</main>


{% endblock %}
